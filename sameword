function wordPalimdrome(word){
  const wordSplit = word.split("")
  const wordReverse = wordSplit.reverse()
  const wordJoin = wordReverse.join("")

if(wordJoin === word){
console.log(`The word ${word} is palendrome`)} 
else{console.log(`The word ${word} is not palindrom`)}

return 0
}

console.log(wordPalimdrome("anana"))
console.log(wordPalimdrome("mama"))
console.log(wordPalimdrome("rama"))